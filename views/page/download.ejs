  <style>
    /* CSS cho phần tử chứa các biểu đồ hình ảnh tải game *

/* CSS cho danh sách các biểu đồ hình ảnh tải game */
    .game-icons {
      display: flex;
      justify-content: center;
    }

    /* CSS cho mỗi biểu đồ hình ảnh tải game */
    .game-icon {
      background-color: #fff;
      border-radius: 10px;
      padding: 20px;
      margin: 0 20px;
      text-align: center;
      cursor: pointer;
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
      width: 100%;
      box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
    }

    /* CSS cho biểu đồ hình ảnh tải game PC */
    .game-icon.pc {
      color: #007bff;
    }

    /* CSS cho biểu đồ hình ảnh tải game Android */
    .game-icon.android {
      color: #3cb371;
    }

    /* CSS cho biểu đồ hình ảnh tải game iOS */
    .game-icon.ios {
      color: #ff6347;
    }

    /* CSS cho biểu đồ hình ảnh tải game Java */
    .game-icon.java {
      color: #ffa500;
    }

    .dark .game-icon{
      background-color: #282e42;

    }
    /* Hiệu ứng khi hover vào biểu đồ hình ảnh tải game */
    .game-icon:hover {
      transform: scale(1.05);
      box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.3);
    }

    /* CSS cho biểu đồ hình ảnh tải game */
    .game-icon img {
      max-width: 100%;
      height: auto;
      margin-bottom: 10px;
    }

    /* CSS cho chữ mô tả nền tảng */
    .game-icon p {
      font-weight: bold;
      font-size: 18px;
      margin: 0;
    }
    /* CSS cho phần game download section trên thiết bị di động */
    @media (max-width: 768px) {
      .game-download-section {
        padding: 10px; /* Giảm khoảng cách padding để tiết kiệm không gian */
        width: 100%; /* Chiều rộng 100% để lấp đầy màn hình */
        text-align: center; /* Căn giữa nội dung ngang */
      }

      /* Kiểu dáng cho tiêu đề "Download Our Game" */
      .game-download-section h2 {
        font-size: 24px; /* Giảm kích thước font chữ */
        margin-bottom: 10px; /* Giảm khoảng cách bottom */
      }

      /* Sử dụng CSS Flex để căn giữa game icons */
      .game-icons {
        display: flex;
        flex-wrap: wrap; /* Cho phép game icons tự xuống dòng khi không đủ không gian */
        justify-content: center; /* Căn giữa theo chiều ngang */
      }

      /* Kiểu dáng cho mỗi game icon */
      .game-icon {
        /* Điều chỉnh kiểu dáng của game icon ở đây */
        width: 168px; /* Đặt chiều rộng cố định */
        height: 91px; /* Đặt chiều cao cố định */
        margin: 5px; /* Khoảng cách giữa các game icon */
        object-fit: cover; /* Đảm bảo tỷ lệ không bị bóp méo */
      }

      /* Kiểu dáng cho mô tả game */
      .game-description {
        text-align: left; /* Căn lề văn bản sang trái */
      }

      /* Kiểu dáng cho danh sách đặc điểm nổi bật */
      .game-description ul {
        padding-left: 20px; /* Thụt lề bên trái */
      }

      /* Kiểu dáng cho các mục trong danh sách đặc điểm nổi bật */
      .game-description ul li {
        margin-bottom: 8px; /* Giảm khoảng cách giữa các mục */
      }
    }
  </style>
